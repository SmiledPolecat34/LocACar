{% extends 'base.html.twig' %}

{% block title %}Modifier l'utilisateur{% endblock %}

{% block body %}
    <h1>Modifier l'utilisateur</h1>
    {{ form_start(userForm) }}
        <div class="mb-3">
            {{ form_label(userForm.email) }}
            {{ form_widget(userForm.email, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(userForm.email) }}
        </div>
        <div class="mb-3">
            {{ form_label(userForm.roles) }}
            {{ form_widget(userForm.roles, {'attr': {'class': 'form-check'}}) }}
            {{ form_errors(userForm.roles) }}
        </div>
        <button type="submit" class="btn btn-primary">Enregistrer</button>
    {{ form_end(userForm) }}
    <a href="{{ path('user_index') }}" class="btn btn-secondary mt-3">Retour Ã  la liste</a>
{% endblock %}
